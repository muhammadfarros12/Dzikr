<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dzikrlogo2"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/dzikir_pagi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/dzikir_pagi"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:background="@drawable/color_border"
        android:text="Dzikir Pagi"
        android:layout_marginTop="200dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/dzikir_petang"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:background="@drawable/color_border"
        android:text="Dzikir Petang"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dzikir_pagi" />

    <Button
        android:id="@+id/btn_dzikir"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/color_border"
        android:text="Dzikir Setelah Shalat"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dzikir_petang"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_notifikasi"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/color_border"
        app:layout_constraintTop_toBottomOf="@id/btn_dzikir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="Notifikasi"
        android:textColor="#fff"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>